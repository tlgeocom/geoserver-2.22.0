{
  "$merge": "items.json",
  "features": [
    {
      "stac_extensions": [
        "https://stac-extensions.github.io/eo/v1.0.0/schema.json",
        "https://stac-extensions.github.io/view/v1.0.0/schema.json",
        "https://stac-extensions.github.io/sat/v1.0.0/schema.json",
        "https://www.geoserver.org/landsat/v1.0.0/schema.json"
      ],
      "properties": {
        "eo:cloud_cover": "$${opt:cloudCover / 2}",
        "gsd": 30, 
        "landsat:tier": "pre-collection",
        "landsat:orbit": "${eop:orbitNumber}" // just to have a custom queriable
      },
      "assets": {
        "thumbnail": {
          "additional": "$${opt:cloudCover}",
          "href":"will replace",
          "type":"will replace"
        }
      },
      "dynamicIncludeFlatTest": {
        "randomNumber":"23",
        "thumbnail2":"thumbnail2",
        "$includeFlat":"${assets}"
      },
      "includeFlatArray": [
        "staticValue",
        "$includeFlat{$${jsonPointer(assets,'/thumbnail/roles')}}",
        "staticValue2",
        {
          "title": "title",
          "titleMTL": "$${jsonPointer(assets, '/MTL/title')}"
        }
      ],
      "links": [ // custom link here
        "$includeFlat{mandatoryLinks.json}",
        "$${jsonPointer(assets, '/MTL')}",
        {
          "href": "http://fake.org/link",
          "rel": "custom-mtl",
          "title": "$${jsonPointer(assets, '/MTL/title')}",
          "type": "text/csv"
        }
      ]
    }
  ]
}